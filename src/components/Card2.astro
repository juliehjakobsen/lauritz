---
const {
  titel,
  beskrivelse,
  varenummer,
  vurdering,
  naestebud,
  udlober,
  showroom,
  udlobstid,
  forende,
} = Astro.props;
---

<article class={udlober == true && "udlober"}>
  <div class="billede">
    <img class="arne" src="/img/kopper.png" alt="" />
  </div>

  <div>
    <h2>{titel}</h2>
    <p class="beskrivelse">{beskrivelse}</p>
    <p class="varenummer">
      <span class="beskrivelse_text"> Varenummer:</span>
      {varenummer}
    </p>
  </div>

  <div class="info">
    <div>
      <p class="vurdering_text">Vurdering:</p>
      <p>DKK {vurdering}</p>
    </div>

    <div>
      <p class="showroom_text">Showroom:</p>
      <p>{showroom}</p>
    </div>

    <div>
      <p class="bud_text">Næste bud:</p>
      <p>DKK {naestebud}</p>
    </div>

    <div>
      <p class="tid_text">Udløbstid:</p>
      <p>{udlobstid}</p>
    </div>

    <div>{udlober == true && <p class="udlober_text">Udløber snart</p>}</div>

    <div>{forende == true && <p class="forende_text">Du er førende</p>}</div>
  </div>
</article>

<style>
  .varenummer {
    padding-top: var(--padding-tobottom);
  }

  .beskrivelse_text,
  .vurdering_text,
  .showroom_text,
  .bud_text,
  .tid_text,
  .udlober_text,
  .forende_text {
    font-weight: 900;
  }

  .info {
    display: grid;
    grid-template-rows: 1fr 1fr 1fr;
    grid-template-columns: 1fr 1fr;
  }

  article {
    background: var(--card-bg);
    width: 60%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 20px;
    margin: auto;
    padding: 30px;
    box-shadow: 2px 2px 10px #888888;
  }

  .udlober_text {
    color: var(--color-rod);
    padding-top: var(--padding-aktivebud);
  }

  .forende_text {
    color: var(--color-grongron);
    padding-top: var(--padding-aktivebud);
  }

  h2 {
    padding-bottom: var(--padding-bottom);
  }

  img {
    width: 100%;
  }
</style>
